<%- include('includes/header'); %>
<%- include('includes/nav'); %>

    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
          <h1 class="text-center">Briefing</h1>
          <p class="text-center lead">Crie ou edite um briefing abaixo.</p>

          <%- include('includes/messages'); %>

          <form action="/briefing/registrar" method="POST">
            <div class="form-group">
              <label for="titulo">Titulo</label>
              <input type="text" class="form-control" id="titulo" name="titulo" placeholder="Semana tal texto alguma coisa">
            </div>
            
            <div class="form-group">
              <label for="assunto">Assunto</label>
              <textarea class="form-control" id="assunto" name="assunto" rows="3"></textarea>
            </div>

            <button class="btn btn-success">Cadastrar</button>
          </form>
        </div>

        <div class="col-lg-2"></div>
      </div>
    </div>

<%- include('includes/footer'); %>